{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "required": ["body","locations"],
  "type": "object",
  "properties": {
    "body": {
      "type": "string"
    },
    "locations": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "coordinates": {
              "type": "array",
              "minItems": 2,
              "maxItems": 2,
              "items": [
                {
                  "type": "number",
                  "minimum": -180,
                  "maximum": 180
                },
                {
                  "type": "number",
                  "minimum": -90,
                  "maximum": 90
                }
              ]
            }
          }
        }
      ]
    }
  }
}
